<%= form_with model: [tag,illustration], url: illustrations_path do |f| %>

  <div class="form-group">
    <%= f.label :"イラスト", class: "mr-5" %>
    <%= f.file_field :illustration_image, accept: "illustration/*" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control illustration_title' %>
  </div>
  <div class="form-group">
    <%= f.label :"説明", class: "mr-5" %>
    <%= f.text_area :body, class: 'form-control illustration_body' %>
  </div>
  <div class="form-group">
    <%= f.label :"タグ", class: "mr-5" %>
    <%#= f.text_area :body, class: 'form-control illustration_body' %>
    <%= f.text_field :tag_name, placeholder: "タグをスペース区切りで5つまで入力(例 Ruby Rails )", class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: "btn-success mx-auto" %>
  </div>
<% end %>

