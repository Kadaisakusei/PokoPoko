<% illustrations.each do |illustration| %>
  <table class='table table-hover table-inverse'>
      <tr>
        <td>
          <% if illustration.illustration_image.attached? %>
            <%= link_to illustration_path(illustration.id) do %>
              <%= image_tag illustration.illustration_image, size: "160x160" %>
              <% end %>
          <% end %>
        </td>
        <td><%= link_to illustration.title,illustration %></td>
        <td><%= illustration.body %></td>
        <td>
          <% if illustration.favorited_by?(current_customer) %>
            <p>
              <%= link_to illustration_favorite_path(illustration), method: :delete do %>
                ♥<%= illustration.favorites.count %> いいね
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to illustration_favorites_path(illustration), method: :post do %>
                ♡<%= illustration.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        </td>
        <td>
          <p>コメント件数：<%= illustration.post_comments.count %></p>
        </td>
      </tr>
  </table>
<% end %>