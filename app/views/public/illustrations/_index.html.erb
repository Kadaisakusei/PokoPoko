<div class="row">
<% illustrations.each do |illustration| %>
  <div class='each_illustration'>
  <div class="card" style="width: 300px;">
    <table class='table table-hover table-inverse'>
            <% if illustration.illustration_image.attached? %>
              <%= link_to illustration_path(illustration.id) do %>
              <img class="card-img-top">
                <%= image_tag illustration.illustration_image, size: "298x298" %>
              </img>
            <div class="card-body">
                <% end %>
            <% end %>
          <h3 class="card-title">
          <%= link_to illustration.title,illustration %>
          </h3>
          <h5 class="card-subtitle">
          <%= illustration.body %>
          </h5>
          <p class="card-text">
            <% if illustration.favorited_by?(current_customer) %>
              <p>
                <%= link_to illustration_favorites_path(illustration), method: :delete do %>
                  ♥<%= illustration.favorites.count %> いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to illustration_favorites_path(illustration), method: :post do %>
                  ♡<%= illustration.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </p>
            <p>コメント件数：<%= illustration.post_comments.count %></p>
              <% illustration.tags.each do |tag|%>
              <div class="btn btn-outline-info disabled">
              <%= tag.tag_name%>
              </div>
            <% end %>
          </div>
    </table>
    </div>
  </div>
<% end %>
</div>