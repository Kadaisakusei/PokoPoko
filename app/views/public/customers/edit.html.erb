  <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <% if @customer.errors.any? %>
          <%= @customer.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <h2>User info</h2>
        <%= form_with model: @customer do |f| %>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          <div class="field">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction, autofocus: true %>
          </div>
          <%= f.submit "Update User" %>
        <% end %>
        <div class="actions">
          <%= link_to "退会する", confirm_withdraw_path, method: :post, class: 'btn btn-sm btn-danger' %>
        </div>
     </div>
    </div>
  </div>