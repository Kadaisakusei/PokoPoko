<div class="container">
  <% if @customers.exists? %>
    <% @customers.each do |customer| %>
      <table>
        <tr>
          <th>icon</th>
          <th>name</th>
          <th>introduction</th>
          <th></th>
        </tr>
        <tr>
          <td class="icon bird"><%= image_tag customer.get_profile_image(100,100), size:'100x100' %></td>
          <td><%= customer.name %></td>
          <td><%= customer.introduction %></td>
          <td><%= link_to 'Show', customer %></td>
        </tr>
      </table>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>