<%= stylesheet_link_tag 'homes' %>
<div class="container log_in">
  <h2>Log in</h2>
  
    <%= form_with model: Customer.new, url: customer_session_path do |f| %>
  
      <div class="field">
        <div class="form-group col-6"><%= f.label :メールアドレス %></div>
        <div class="form-group col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x10" %></div>
      </div>
  
      <div class="field">
        <%= f.label :password %><br />
        <div class="form-group col-6"><%= f.password_field :password, autocomplete: "current-password", size: "40x10" %></div>
      </div>
  
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
  
    <% end %>
</div>


