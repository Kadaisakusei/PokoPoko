<div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <button type="button" class="btn btn-vivid">
      <li>
        <%=  link_to customer_path(current_customer),class: 'nav-link text-white' do %>
          <i class="fas fa-solid fa-user"></i> マイページ
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-vivid">
      <li>
        <%=  link_to illustrations_path(@current_customer),class: 'nav-link text-white' do %>
          <i class="fas fa-heart"></i> 一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  newly_arrived_path, class: 'nav-link text-white' do %>
        <i class="fas fa-th-list"></i> 新着一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  customers_path, class: 'nav-link text-white' do %>
        <i class="fas fa-users"></i> ユーザー一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  tag_index_path, class: 'nav-link text-white' do %>
        <i class="fas fa-tags"></i> タグ一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  destroy_customer_session_path, method: :delete, class: 'nav-link text-white' do %>
        <i class="fas fa-sign-out-alt"></i> ログアウト
        <% end %>
      </li>
    </button>
</div>