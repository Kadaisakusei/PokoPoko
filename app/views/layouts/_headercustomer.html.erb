<div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <button type="button" class="btn btn-vivid">
      <li>
        <%=  link_to customer_path(current_customer),class: 'nav-link text-dark' do %>
          <i class="fas fa-solid fa-user"></i> マイページ
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  newly_arrived_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-solid fa-arrow-right"></i> 新着一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  customers_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-solid fa-arrow-right"></i> ユーザー一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  tag_index_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-solid fa-arrow-right"></i> タグ一覧
        <% end %>
      </li>
    </button>
    <button type="button" class="btn btn-deep">
      <li>
        <%= link_to  destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
        <i class="fas fa-solid fa-arrow-right"></i> ログアウト
        <% end %>
      </li>
    </button>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Customer'], ['Illustration']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>